# Options for log.level:
#   * fatal
#   * error
#   * warn
#   * info (default)
#   * debug
#   * trace

log.level: {{ logstash_log_level }}

path.logs: /var/log/logstash
path.data: /var/lib/logstash

xpack.monitoring.enabled: true
xpack.monitoring.elasticsearch.username: logstash_system
xpack.monitoring.elasticsearch.password: "{{ logstash_system_pass }}"

xpack.monitoring.elasticsearch.hosts: {{ elastic_data_hosts }}
xpack.monitoring.elasticsearch.ssl.verification_mode: certificate
xpack.monitoring.elasticsearch.ssl.certificate_authority: /etc/logstash/certs/ca.crt

xpack.management.enabled: false
